# Polymarket CLOB API Configuration
# Get these from https://polymarket.com (Account Settings -> API)
CLOB_API_KEY=your_api_key_here
CLOB_API_SECRET=your_api_secret_here
CLOB_API_PASSPHRASE=your_api_passphrase_here

# Polygon Private Key (required for L1/L2 authentication)
# This is your Ethereum/Polygon wallet private key (without 0x prefix)
POLYGON_PRIVATE_KEY=your_polygon_private_key_here

# Funder Address (required for Email/Magic wallet authentication)
# This is the wallet address where you deposit USDC for trading
FUNDER_ADDRESS=your_funder_address_here

# Alert Configuration (Optional - leave empty to disable)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
EMAIL_PASSWORD=your_email_app_password

# Optional: Override simulation mode via environment
# Set to "true" for simulation mode, "false" for real data mode
# If not set, uses the value from insider_config.json
# SIMULATION_MODE=false